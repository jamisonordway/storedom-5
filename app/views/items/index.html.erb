<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>
  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>

<h3>Search for a store near you:</h3>

 <%= form_tag :search_index, method: :get, class: "form-inline" do %>
            <div class="form-group search-field">
              <%= text_field_tag :search, "Search", class: "form-control" %>
              <%= submit_tag "Search", class: "btn btn-primary" %>
            </div>
          <% end %>